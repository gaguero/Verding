# Verding Web Frontend Environment Configuration
# Copy this file to .env.local for local development
# Never commit .env.local to version control

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================
VITE_APP_NAME=Verding
VITE_APP_VERSION=0.1.1
VITE_APP_DESCRIPTION="Agent-First Microgreens Management Platform"

# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================
# Options: development, staging, production, test
VITE_ENVIRONMENT=development
VITE_NODE_ENV=development

# =============================================================================
# API CONFIGURATION
# =============================================================================
# Backend API base URL
VITE_API_BASE_URL=http://localhost:3001

# API request timeout (milliseconds)
VITE_API_TIMEOUT=10000

# API retry attempts
VITE_API_RETRY_ATTEMPTS=3

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
# Supabase project URL
VITE_SUPABASE_URL=https://your-project.supabase.co

# Supabase anonymous/public key (safe to expose)
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# Supabase service role key (NEVER expose in frontend)
# SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================
# JWT token expiration time (in seconds)
VITE_JWT_EXPIRES_IN=3600

# Refresh token expiration time (in seconds)
VITE_REFRESH_TOKEN_EXPIRES_IN=604800

# Enable social auth providers
VITE_ENABLE_GOOGLE_AUTH=true
VITE_ENABLE_GITHUB_AUTH=false
VITE_ENABLE_DISCORD_AUTH=false

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable development features
VITE_ENABLE_DEV_TOOLS=true
VITE_ENABLE_REDUX_DEVTOOLS=true
VITE_ENABLE_REACT_QUERY_DEVTOOLS=true

# Enable experimental features
VITE_ENABLE_EXPERIMENTAL_FEATURES=false
VITE_ENABLE_PWA=false
VITE_ENABLE_OFFLINE_MODE=false

# Enable analytics and monitoring
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=false
VITE_ENABLE_PERFORMANCE_MONITORING=false

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================
# Google Analytics tracking ID
VITE_GA_TRACKING_ID=

# Sentry DSN for error reporting
VITE_SENTRY_DSN=

# LogRocket app ID
VITE_LOGROCKET_APP_ID=

# Hotjar site ID
VITE_HOTJAR_SITE_ID=

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================
# n8n workflow engine URL
VITE_N8N_WEBHOOK_URL=https://your-n8n-instance.app.n8n.cloud

# External API endpoints
VITE_WEATHER_API_URL=
VITE_MAPS_API_KEY=

# =============================================================================
# STORAGE & CDN
# =============================================================================
# File upload limits
VITE_MAX_FILE_SIZE_MB=10
VITE_ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# CDN configuration
VITE_CDN_BASE_URL=
VITE_ASSET_BASE_URL=

# =============================================================================
# PERFORMANCE & OPTIMIZATION
# =============================================================================
# Bundle size limits
VITE_BUNDLE_SIZE_LIMIT_KB=500

# Enable service worker
VITE_ENABLE_SERVICE_WORKER=false

# Cache strategy
VITE_CACHE_STRATEGY=networkFirst

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Content Security Policy
VITE_CSP_ENABLED=true
VITE_CSP_REPORT_URI=

# CORS settings
VITE_CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
# Mock service worker
VITE_ENABLE_MSW=false

# Storybook integration
VITE_STORYBOOK_ENABLED=true

# Debug logging
VITE_LOG_LEVEL=info
VITE_ENABLE_DEBUG_LOGGING=true

# =============================================================================
# BUILD CONFIGURATION
# =============================================================================
# Source maps in production
VITE_GENERATE_SOURCEMAPS=false

# Bundle analysis
VITE_ANALYZE_BUNDLE=false

# Legacy browser support
VITE_LEGACY_SUPPORT=false

# =============================================================================
# LOCALIZATION
# =============================================================================
# Default language
VITE_DEFAULT_LOCALE=en

# Available languages
VITE_AVAILABLE_LOCALES=en,es,fr

# =============================================================================
# UI/UX CONFIGURATION
# =============================================================================
# Theme configuration
VITE_DEFAULT_THEME=light
VITE_ENABLE_DARK_MODE=true

# Animation settings
VITE_ENABLE_ANIMATIONS=true
VITE_REDUCED_MOTION=false

# Accessibility features
VITE_HIGH_CONTRAST_MODE=false
VITE_SCREEN_READER_SUPPORT=true

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================
# Push notifications
VITE_ENABLE_PUSH_NOTIFICATIONS=false
VITE_VAPID_PUBLIC_KEY=

# Email notifications
VITE_EMAIL_NOTIFICATIONS_ENABLED=true

# =============================================================================
# AGENT & AI CONFIGURATION
# =============================================================================
# Agent interaction settings
VITE_AGENT_RESPONSE_TIMEOUT=30000
VITE_ENABLE_VOICE_COMMANDS=false
VITE_ENABLE_CHAT_HISTORY=true

# AI model settings
VITE_AI_MODEL_TEMPERATURE=0.7
VITE_AI_MAX_TOKENS=1000

# =============================================================================
# MICROGREENS SPECIFIC
# =============================================================================
# Property management
VITE_MAX_PROPERTIES_PER_USER=5
VITE_DEFAULT_PROPERTY_TIMEZONE=America/New_York

# Sensor data settings
VITE_SENSOR_UPDATE_INTERVAL=30000
VITE_SENSOR_HISTORY_DAYS=30

# Growth tracking
VITE_GROWTH_PHOTO_MAX_SIZE_MB=5
VITE_GROWTH_TRACKING_INTERVAL=daily 